extends layout

block content
   .container.py-4
     .row.justify-content-center
      .col-md-8
        .card.shadow
          .card-header.bg-primary.text-white
            h5.mb-0
              i.fas.fa-user-edit.me-2
              | Edit Employee
          .card-body
            if error
              .alert.alert-danger
                strong Error: 
                = error
            
            form(method='POST', action=`/employees/editEmployee/${employee.id}`)
              .row
                .col-md-6
                  .mb-3
                    label.form-label(for='name') Name *
                    input.form-control(type='text', id='name', name='name', value=employee.name, required)
                 .col-md-6
                  .mb-3
                    label.form-label(for='position') Position *
                    input.form-control(type='text', id='position', name='position', value=employee.position, required)
               
              
              .row
               
                
                .col-md-6
                  .mb-3
                    label.form-label(for='active') staus *
                    select.form-select(id='active', name='isActive', required)
                      option(value='') Select status
                      option(value="true", selected=(employee.isActive === true)) ACTIVE
                      option(value="false", selected=(employee.isActive === false)) INACTIVE
                      
              
              .row
                
              
             
              
              .d-flex.gap-2
                button.btn.btn-primary(type='submit')
                  i.fas.fa-save.me-2
                  | Update Employee
                a.btn.btn-secondary(href='/employees/viewallemployees')
                  i.fas.fa-arrow-left.me-2
                  | Cancel