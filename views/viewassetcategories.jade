extends layout 

block content
    .container-fluid.py-4
      .row
      .col-12
          h1.mb-4.text-center Asset Category Management System
          
          .card.shadow
            .card-header.bg-primary.text-white
              .d-flex.justify-content-between.align-items-center
                h5.mb-0 Asset Category List
                a.btn.btn-light.btn-sm(href='/assetcategories/addassetcategory') Add New Asset Category
                
            .card-body
              .row.mb-3
               
                      
              .table-responsive
                table#assetCategoryTable.table.table-striped.table-hover
                  thead.table-dark
                    tr
                      th ID
                      th Name
                      th Description
                      th Actions
                  tbody
                    each asset in assetCategories
                      tr
                        td= asset.id
                        td= asset.categoryName
                        td= asset.description
                        td
                          .btn-group
                            a.btn.btn-sm.btn-outline-primary(href=`/assetcategories/editcategory/${asset.id}`) Edit
                           


    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js')
   
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
   
    script(src='https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js')
    script(src='https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js')
    script.
      $(document).ready(function() {
        var table = $('#assetCategoryTable').DataTable({
          searching: true,
          ordering: true,
          paging: true,
          filtering : true,
          pageLength: 10,
          responsive: true,
          language: {
            search: "Search Asset Category:",
            lengthMenu: "Show _MENU_ category per page",
            info: "Showing _START_ to _END_ of _TOTAL_ assets category",
            infoEmpty: "No asset category found",
            infoFiltered: "(filtered from _MAX_ total assets category)"
          }
        });

      
        

       
      });